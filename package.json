{
  "name": "openai-realtime-electron",
  "version": "1.0.0",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently --names \"SERVER,CLIENT,ELECTRON\" -c \"bgBlue.bold,bgMagenta.bold,bgGreen.bold\" \"npm run dev:server\" \"npm run dev:client\" \"npm run dev:electron\"",
    "dev:server": "cd remote-server && npm run dev",
    "dev:client": "vite",
    "dev:electron": "wait-on http://localhost:3000 http://localhost:3001 && electron .",
    "electron": "electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "setup": "npm install && cd remote-server && npm install",
    "lint": "eslint . --ext .js,.jsx --fix"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.31",
    "postcss-nesting": "^12.0.2",
    "postcss-preset-env": "^7.7.1",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.openai.realtime-console",
    "productName": "OpenAI Realtime Console",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg"
    }
  }
}
